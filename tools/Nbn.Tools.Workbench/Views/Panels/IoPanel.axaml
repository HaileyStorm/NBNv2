<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Nbn.Tools.Workbench.ViewModels"
             x:Class="Nbn.Tools.Workbench.Views.Panels.IoPanel"
             x:DataType="vm:IoPanelViewModel">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="16">
      <Border Classes="card">
        <StackPanel Spacing="8">
          <TextBlock Text="Energy + Plasticity Settings" Classes="card-title" />
          <TextBlock Text="System-wide policy controls persisted in SettingsMonitor." Classes="muted" />
          <TextBlock Text="These values stay synced with Orchestrator &gt; Settings." Classes="muted" />
        </StackPanel>
      </Border>

      <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
        <Border Classes="card" Grid.Column="0">
          <StackPanel Spacing="8">
            <TextBlock Text="Energy + Cost" Classes="card-title" />
            <StackPanel Orientation="Horizontal" Spacing="12">
              <CheckBox Content="Enable cost + energy system-wide"
                        IsChecked="{Binding SystemCostEnergyEnabledDraft}" />
            </StackPanel>
          </StackPanel>
        </Border>

        <Border Classes="card" Grid.Column="1">
          <StackPanel Spacing="8">
            <TextBlock Text="Plasticity" Classes="card-title" />
            <StackPanel Orientation="Horizontal" Spacing="12">
              <CheckBox Content="Enable plasticity system-wide"
                        IsChecked="{Binding SystemPlasticityEnabledDraft}" />
            </StackPanel>
            <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="6">
              <TextBlock Text="Mode" Classes="muted" />
              <ComboBox Grid.Column="1"
                        ItemsSource="{Binding PlasticityModes}"
                        SelectedItem="{Binding SelectedSystemPlasticityModeDraft}"
                        Width="140">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Label}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
              <TextBlock Grid.Row="1" Text="Rate" Classes="muted" />
              <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SystemPlasticityRateTextDraft}" Width="100" />
              <Button Grid.Row="1"
                      Grid.Column="2"
                      Content="Apply"
                      Command="{Binding ApplySystemPlasticityModeRateCommand}" />
            </Grid>
          </StackPanel>
        </Border>
      </Grid>

      <Border Classes="card">
        <StackPanel Spacing="8">
          <TextBlock Text="Settings Feedback" Classes="card-title" />
          <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
            <TextBlock Text="Known Brain" Classes="muted" VerticalAlignment="Center" />
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding KnownBrains}"
                      SelectedItem="{Binding SelectedFeedbackBrain}">
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Label}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
          </Grid>
          <TextBlock Text="{Binding FeedbackBrainSummary}" Classes="muted" TextWrapping="Wrap" />
          <TextBlock Text="{Binding BrainInfoSummary}" TextWrapping="Wrap" />
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>
