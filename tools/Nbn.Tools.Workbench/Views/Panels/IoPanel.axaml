<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Nbn.Tools.Workbench.ViewModels"
             x:Class="Nbn.Tools.Workbench.Views.Panels.IoPanel"
             x:DataType="vm:IoPanelViewModel">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="16">
      <Border Classes="card">
        <StackPanel Spacing="8">
          <TextBlock Text="Energy + Plasticity Settings" Classes="card-title" />
          <TextBlock Text="System-wide policy controls persisted in SettingsMonitor." Classes="muted" />
          <TextBlock Text="These values stay synced with Orchestrator &gt; Settings." Classes="muted" />
        </StackPanel>
      </Border>

      <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
        <Border Classes="card" Grid.Column="0">
          <StackPanel Spacing="8">
            <TextBlock Text="Energy + Cost" Classes="card-title" />
            <StackPanel Orientation="Horizontal" Spacing="12">
              <CheckBox Content="Enable cost + energy system-wide"
                        IsChecked="{Binding SystemCostEnergyEnabledDraft}" />
              <Button Content="Apply Setting"
                      Command="{Binding ApplyCostEnergyCommand}" />
            </StackPanel>
          </StackPanel>
        </Border>

        <Border Classes="card" Grid.Column="1">
          <StackPanel Spacing="8">
            <TextBlock Text="Plasticity" Classes="card-title" />
            <StackPanel Orientation="Horizontal" Spacing="12">
              <CheckBox Content="Enable plasticity system-wide"
                        IsChecked="{Binding SystemPlasticityEnabledDraft}" />
              <Button Content="Apply Setting"
                      Command="{Binding ApplyPlasticityCommand}" />
            </StackPanel>
          </StackPanel>
        </Border>
      </Grid>

      <Border Classes="card">
        <StackPanel Spacing="6">
          <TextBlock Text="Settings Feedback" Classes="card-title" />
          <TextBlock Text="{Binding BrainInfoSummary}" TextWrapping="Wrap" />
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>
