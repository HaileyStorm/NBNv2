<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Nbn.Tools.Workbench.ViewModels"
             xmlns:models="clr-namespace:Nbn.Tools.Workbench.Models"
             x:Class="Nbn.Tools.Workbench.Views.Panels.VizPanel"
             x:DataType="vm:VizPanelViewModel">
  <UserControl.KeyBindings>
    <KeyBinding Gesture="Alt+Left" Command="{Binding NavigateCanvasPreviousCommand}" />
    <KeyBinding Gesture="Alt+Right" Command="{Binding NavigateCanvasNextCommand}" />
    <KeyBinding Gesture="Alt+Enter" Command="{Binding NavigateCanvasSelectionCommand}" />
    <KeyBinding Gesture="Alt+P" Command="{Binding TogglePinSelectionCommand}" />
    <KeyBinding Gesture="Ctrl+Shift+C" Command="{Binding CopyCanvasDiagnosticsCommand}" />
    <KeyBinding Gesture="Escape" Command="{Binding ClearCanvasInteractionCommand}" />
  </UserControl.KeyBindings>
  <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <StackPanel Spacing="16">
      <Border Classes="card">
        <StackPanel Spacing="10">
          <TextBlock Text="Visualizer" Classes="card-title" />
          <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto" ColumnSpacing="12" RowSpacing="6">
            <TextBlock Text="Known brains" Classes="muted" />
            <ComboBox Grid.Column="1" ItemsSource="{Binding KnownBrains}" SelectedItem="{Binding SelectedBrain}" Width="320">
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Display}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6">
              <TextBox Width="200" Text="{Binding BrainEntryText}" Watermark="Paste BrainId" />
              <Button Content="Add" Command="{Binding AddBrainCommand}" />
            </StackPanel>
          </Grid>
          <TextBlock Text="{Binding Status}" Classes="muted" />
        </StackPanel>
      </Border>

      <Border Classes="card">
        <StackPanel Spacing="10">
          <TextBlock Text="Neural Activity View" Classes="card-title" />
          <TextBlock Text="Canvas projection for region/edge/tick activity with deterministic layout and focus anchoring." Classes="card-subtitle" />
          <Grid ColumnDefinitions="Auto,96,Auto,Auto,96,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="8" RowSpacing="8">
            <TextBlock Text="Region focus" Classes="muted" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" Text="{Binding RegionFocusText}" Watermark="blank = full brain" />
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6">
              <Button Content="Zoom" Command="{Binding ZoomCommand}" />
              <Button Content="Full brain" Command="{Binding ShowFullBrainCommand}" />
            </StackPanel>
            <TextBlock Grid.Column="3" Text="Tick window" Classes="muted" VerticalAlignment="Center" />
            <TextBox Grid.Column="4" Text="{Binding TickWindowText}" Width="80" />
            <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="10">
              <Button Content="Apply options" Command="{Binding ApplyActivityOptionsCommand}" />
              <CheckBox Content="Include low-signal events" IsChecked="{Binding IncludeLowSignalEvents}" VerticalAlignment="Center" />
              <TextBlock Text="{Binding ActivitySummary}" Classes="muted" VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Grid.Row="1" Text="Event type" Classes="muted" VerticalAlignment="Center" />
            <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding VizPanelTypeOptions}" SelectedItem="{Binding SelectedVizType}" Width="180">
              <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="vm:VizPanelTypeOption">
                  <TextBlock Text="{Binding Label}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Grid.Row="1" Grid.Column="2" Text="Region filter" Classes="muted" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding RegionFilterText}" />
            <TextBlock Grid.Row="1" Grid.Column="4" Text="Search" Classes="muted" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding SearchFilterText}" Watermark="Type, event id, source, target" />

            <TextBlock Grid.Row="2" Text="Tick override Hz" Classes="muted" VerticalAlignment="Center" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TickRateOverrideText}" Watermark="e.g. 12.5" />
            <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal" Spacing="10">
              <Button Content="Apply tick override" Command="{Binding ApplyTickRateOverrideCommand}" />
              <Button Content="Clear override" Command="{Binding ClearTickRateOverrideCommand}" />
              <TextBlock Text="{Binding TickRateOverrideSummary}" Classes="muted" VerticalAlignment="Center" />
            </StackPanel>
          </Grid>

          <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*" ColumnSpacing="12" RowSpacing="8">
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
              <Button Content="Copy diagnostics"
                      Command="{Binding CopyCanvasDiagnosticsCommand}"
                      ToolTip.Tip="Ctrl+Shift+C" />
              <Button Content="{Binding ProjectionSnapshotToggleLabel}"
                      Command="{Binding ToggleProjectionSnapshotCommand}" />
            </StackPanel>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    BorderBrush="{DynamicResource NbnBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Background="{DynamicResource NbnSurfaceAltBrush}"
                    MinHeight="300">
              <StackPanel Spacing="8" Margin="12">
                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,*" ColumnSpacing="6">
                  <Button Content="Prev"
                          Command="{Binding NavigateCanvasPreviousCommand}"
                          ToolTip.Tip="Alt+Left" />
                  <Button Grid.Column="1"
                          Content="Next"
                          Command="{Binding NavigateCanvasNextCommand}"
                          ToolTip.Tip="Alt+Right" />
                  <Button Grid.Column="2"
                          Content="{Binding TogglePinSelectionLabel}"
                          Command="{Binding TogglePinSelectionCommand}"
                          ToolTip.Tip="Alt+P" />
                  <Button Grid.Column="3"
                          Content="Navigate"
                          Command="{Binding NavigateCanvasSelectionCommand}"
                          ToolTip.Tip="Alt+Enter" />
                  <Button Grid.Column="4"
                          Content="Clear"
                          Command="{Binding ClearCanvasInteractionCommand}"
                          ToolTip.Tip="Escape" />
                  <TextBlock Grid.Column="5"
                             Text="{Binding CanvasNavigationHint}"
                             Classes="muted"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap" />
                </Grid>
                <TextBox Text="{Binding ActivityCanvasLegend}"
                         IsReadOnly="True"
                         Classes="muted"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         IsTabStop="False" />
                <TextBox Text="{Binding ActivityInteractionSummary}"
                         IsReadOnly="True"
                         Classes="muted"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         TextWrapping="Wrap"
                         IsTabStop="False" />
                <TextBox Text="{Binding ActivityPinnedSummary}"
                         IsReadOnly="True"
                         Classes="muted"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         TextWrapping="Wrap"
                         IsTabStop="False" />
                <Grid ClipToBounds="True">
                  <Grid Width="{Binding ActivityCanvasWidth}"
                        Height="{Binding ActivityCanvasHeight}"
                        PointerMoved="ActivityCanvasPointerMoved"
                        PointerPressed="ActivityCanvasPointerPressed"
                        PointerExited="ActivityCanvasPointerExited">
                    <ItemsControl ItemsSource="{Binding CanvasEdges}"
                                  Width="{Binding ActivityCanvasWidth}"
                                  Height="{Binding ActivityCanvasHeight}">
                      <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                          <Canvas />
                        </ItemsPanelTemplate>
                      </ItemsControl.ItemsPanel>
                      <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:VizActivityCanvasEdge">
                          <Canvas Width="860"
                                  Height="420">
                            <Path Data="{Binding PathData}"
                                  Stroke="Transparent"
                                  StrokeThickness="{Binding HitTestThickness}" />
                            <Path Data="{Binding PathData}"
                                  Stroke="{Binding Stroke}"
                                  StrokeDashArray="{Binding DirectionDashArray}"
                                  StrokeThickness="{Binding StrokeThickness}"
                                  Opacity="{Binding Opacity}"
                                  StrokeLineCap="Round" />
                            <Path Data="{Binding PathData}"
                                  Stroke="{Binding ActivityStroke}"
                                  StrokeThickness="{Binding ActivityStrokeThickness}"
                                  Opacity="{Binding ActivityOpacity}"
                                  StrokeLineCap="Round"
                                  IsHitTestVisible="False" />
                            <Path Data="{Binding PathData}"
                                  Stroke="{DynamicResource NbnGoldBrush}"
                                  StrokeDashArray="{Binding DirectionDashArray}"
                                  StrokeThickness="{Binding StrokeThickness}"
                                  Opacity="{Binding Opacity}"
                                  IsVisible="{Binding IsPinned}"
                                  IsHitTestVisible="False" />
                            <Path Data="{Binding PathData}"
                                  Stroke="{DynamicResource NbnTealBrush}"
                                  StrokeDashArray="{Binding DirectionDashArray}"
                                  StrokeThickness="{Binding StrokeThickness}"
                                  Opacity="{Binding Opacity}"
                                  IsVisible="{Binding IsHovered}"
                                  IsHitTestVisible="False" />
                            <Path Data="{Binding PathData}"
                                  Stroke="{DynamicResource NbnAccentBrush}"
                                  StrokeDashArray="{Binding DirectionDashArray}"
                                  StrokeThickness="{Binding StrokeThickness}"
                                  Opacity="{Binding Opacity}"
                                  IsVisible="{Binding IsSelected}"
                                  IsHitTestVisible="False" />
                          </Canvas>
                        </DataTemplate>
                      </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding CanvasNodes}"
                                  Width="{Binding ActivityCanvasWidth}"
                                  Height="{Binding ActivityCanvasHeight}">
                      <ItemsControl.ItemContainerTheme>
                        <ControlTheme TargetType="ContentPresenter" x:CompileBindings="False">
                          <Setter Property="Canvas.Left" Value="{Binding Left}" />
                          <Setter Property="Canvas.Top" Value="{Binding Top}" />
                        </ControlTheme>
                      </ItemsControl.ItemContainerTheme>
                      <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                          <Canvas />
                        </ItemsPanelTemplate>
                      </ItemsControl.ItemsPanel>
                      <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:VizActivityCanvasNode">
                          <Grid Width="{Binding Diameter}"
                                Height="{Binding Diameter}">
                            <Ellipse Fill="{Binding Fill}" Opacity="{Binding FillOpacity}" />
                            <Ellipse Stroke="{Binding Stroke}"
                                     StrokeThickness="{Binding StrokeThickness}"
                                     Opacity="{Binding PulseOpacity}" />
                            <Ellipse Stroke="{DynamicResource NbnGoldBrush}"
                                     StrokeThickness="2.2"
                                     IsVisible="{Binding IsPinned}" />
                            <Ellipse Stroke="{DynamicResource NbnTealBrush}"
                                     StrokeThickness="2.2"
                                     IsVisible="{Binding IsHovered}" />
                            <Ellipse Stroke="{DynamicResource NbnAccentBrush}"
                                     StrokeThickness="2.8"
                                     IsVisible="{Binding IsSelected}" />
                            <TextBlock Text="*"
                                       IsVisible="{Binding IsPinned}"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource NbnGoldBrush}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="2,0,0,0" />
                            <TextBlock Text="{Binding Label}"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                          </Grid>
                        </DataTemplate>
                      </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Canvas IsHitTestVisible="False">
                              <Border Canvas.Left="{Binding CanvasHoverCardLeft}"
                              Canvas.Top="{Binding CanvasHoverCardTop}"
                              IsVisible="{Binding IsCanvasHoverCardVisible}"
                              MaxWidth="420"
                              Background="{DynamicResource NbnSurfaceBrush}"
                              BorderBrush="{DynamicResource NbnBorderBrush}"
                              BorderThickness="1"
                              CornerRadius="8"
                              Padding="8">
                        <TextBox Text="{Binding CanvasHoverCardText}"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 IsTabStop="False" />
                      </Border>
                    </Canvas>
                  </Grid>
                </Grid>
              </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="{DynamicResource NbnBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Background="{DynamicResource NbnSurfaceAltBrush}"
                    Padding="10"
                    Width="420"
                    IsVisible="{Binding ShowProjectionSnapshot}">
              <ScrollViewer MaxHeight="460" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="10">
                  <TextBlock Text="Projection Snapshot" Classes="card-title" />
                  <ItemsControl ItemsSource="{Binding ActivityStats}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate x:DataType="vm:VizActivityStatItem">
                        <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="8" Margin="0,2">
                          <TextBlock Text="{Binding Label}" Classes="muted" />
                          <TextBlock Grid.Column="1" Text="{Binding Value}" Classes="row-title" />
                          <TextBlock Grid.Column="2" Text="{Binding Detail}" Classes="muted" />
                        </Grid>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>

                  <TextBlock Text="Top Regions" Classes="card-title" />
                  <ItemsControl ItemsSource="{Binding RegionActivity}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate x:DataType="vm:VizRegionActivityItem">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" Margin="0,2">
                          <TextBlock Text="{Binding RegionLabel}" Classes="row-title" />
                          <TextBlock Grid.Column="1" Text="{Binding DominantType}" Classes="muted" />
                          <TextBlock Grid.Column="2" Text="{Binding EventCount}" Classes="muted" />
                        </Grid>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>

                  <TextBlock Text="Top Edges" Classes="card-title" />
                  <ItemsControl ItemsSource="{Binding EdgeActivity}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate x:DataType="vm:VizEdgeActivityItem">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8" Margin="0,2">
                          <TextBlock Text="{Binding RouteLabel}" Classes="row-title" />
                          <TextBlock Grid.Column="1" Text="{Binding AverageStrength, StringFormat='str {0:0.###}'}" Classes="muted" />
                          <TextBlock Grid.Column="2" Text="{Binding EventCount}" Classes="muted" />
                        </Grid>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>

                  <TextBlock Text="Recent Ticks" Classes="card-title" />
                  <ItemsControl ItemsSource="{Binding TickActivity}">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate x:DataType="vm:VizTickActivityItem">
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8" Margin="0,2">
                          <TextBlock Text="{Binding TickId, StringFormat='Tick {0}'}" Classes="row-title" />
                          <TextBlock Grid.Column="1" Text="{Binding EventCount, StringFormat='all {0}'}" Classes="muted" />
                          <TextBlock Grid.Column="2" Text="{Binding FiredCount, StringFormat='fired {0}'}" Classes="muted" />
                          <TextBlock Grid.Column="3" Text="{Binding AxonCount, StringFormat='axon {0}'}" Classes="muted" />
                          <TextBlock Grid.Column="4" Text="{Binding BufferCount, StringFormat='buffer {0}'}" Classes="muted" />
                        </Grid>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </StackPanel>
              </ScrollViewer>
            </Border>
          </Grid>
        </StackPanel>
      </Border>

      <Border Classes="card">
        <StackPanel Spacing="8">
          <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
            <TextBlock Text="Visualization Stream" Classes="card-title" VerticalAlignment="Center" />
            <Button Grid.Column="1"
                    Content="{Binding VisualizationStreamToggleLabel}"
                    Command="{Binding ToggleVisualizationStreamCommand}" />
            <Button Grid.Column="2" Content="Export" Command="{Binding ExportCommand}" IsVisible="{Binding ShowVisualizationStream}" />
            <Button Grid.Column="3" Content="Clear" Command="{Binding ClearCommand}" IsVisible="{Binding ShowVisualizationStream}" />
          </Grid>
          <TextBlock Text="{Binding Status}" Classes="muted" />
          <Grid ColumnDefinitions="1.35*,1*" ColumnSpacing="12" IsVisible="{Binding ShowVisualizationStream}">
            <ListBox ItemsSource="{Binding VizEvents}" SelectedItem="{Binding SelectedEvent}" MaxHeight="260">
              <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:VizEventItem">
                  <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8" Margin="0,3">
                    <TextBlock Text="{Binding Time, StringFormat='{}{0:HH:mm:ss.fff}'}" Classes="muted" />
                    <TextBlock Grid.Column="1" Text="{Binding Type}" Classes="row-title" />
                    <TextBlock Grid.Column="2" Text="{Binding Region, StringFormat='R{0}'}" Classes="muted" />
                    <TextBlock Grid.Column="3" Text="{Binding TickId}" Classes="muted" />
                  </Grid>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Column="1"
                    BorderBrush="{DynamicResource NbnBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="8">
              <TextBox Text="{Binding SelectedPayload}" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" MinHeight="180" />
            </Border>
          </Grid>
        </StackPanel>
      </Border>

      <Grid ColumnDefinitions="0.9*,1.1*,1.1*" ColumnSpacing="16">
        <StackPanel Spacing="16" Grid.Column="0">
          <Border Classes="card">
            <StackPanel Spacing="8">
              <TextBlock Text="Brain Control" Classes="card-title" />
              <TextBlock Text="Brain ID" Classes="muted" />
              <TextBox Text="{Binding Brain.BrainIdText}" Watermark="Guid" IsReadOnly="True" />
              <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Refresh Info" Command="{Binding Brain.RequestInfoCommand}" />
              </StackPanel>
              <TextBlock Text="{Binding Brain.BrainInfoSummary}" Classes="muted" />
            </StackPanel>
          </Border>
        </StackPanel>

        <StackPanel Spacing="16" Grid.Column="1">
          <Border Classes="card">
            <StackPanel Spacing="8">
              <TextBlock Text="Inputs" Classes="card-title" />
              <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="8" RowDefinitions="Auto,Auto">
                <TextBlock Text="Index" Classes="muted" />
                <TextBox Grid.Column="1" Text="{Binding Brain.InputIndexText}" Width="80" HorizontalAlignment="Left" />
                <TextBlock Grid.Column="2" Text="Value" Classes="muted" />
                <TextBox Grid.Column="3" Text="{Binding Brain.InputValueText}" Width="100" HorizontalAlignment="Left" />
                <TextBlock Grid.Row="1" Text="Vector" Classes="muted" />
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Brain.InputVectorText}" Watermark="0.1, 0.2, -0.3" />
              </Grid>
              <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Send Input" Command="{Binding Brain.SendInputCommand}" />
                <Button Content="Send Vector" Command="{Binding Brain.SendVectorCommand}" />
              </StackPanel>
            </StackPanel>
          </Border>
        </StackPanel>

        <StackPanel Spacing="16" Grid.Column="2">
          <Border Classes="card">
            <StackPanel Spacing="8">
              <TextBlock Text="Energy + Cost (Selected Brain)" Classes="card-title" />
              <TextBlock Text="Applies only to the selected brain above." Classes="muted" />
              <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="6">
                <TextBlock Text="Credit" Classes="muted" />
                <TextBox Grid.Column="1" Text="{Binding Brain.EnergyCreditText}" Width="100" />
                <Button Grid.Column="2" Content="Apply" Command="{Binding ApplyEnergyCreditCommand}" />
                <TextBlock Grid.Row="1" Text="Rate" Classes="muted" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Brain.EnergyRateText}" Width="100" />
                <Button Grid.Row="1" Grid.Column="2" Content="Apply" Command="{Binding ApplyEnergyRateCommand}" />
              </Grid>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <CheckBox Content="Cost + Energy Enabled" IsChecked="{Binding Brain.CostEnergyEnabled}" />
                <Button Content="Update Flags" Command="{Binding ApplyCostEnergyCommand}" />
              </StackPanel>
            </StackPanel>
          </Border>
        </StackPanel>
      </Grid>

      <Border Classes="card">
        <StackPanel Spacing="8">
          <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
            <TextBlock Text="Vector Outputs" Classes="card-title" VerticalAlignment="Center" />
            <Button Grid.Column="1" Content="{Binding Brain.VectorUiUpdatesButtonLabel}" Command="{Binding Brain.ToggleVectorUiUpdatesCommand}" />
            <Button Grid.Column="2" Content="Clear" Command="{Binding Brain.ClearVectorOutputsCommand}" />
          </Grid>
          <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
            <CheckBox Content="Hide zero vectors" IsChecked="{Binding Brain.FilterZeroVectorOutputs}" />
            <TextBlock Grid.Column="1" Text="{Binding Brain.VectorUiUpdatesStatus}" Classes="muted" VerticalAlignment="Center" />
          </Grid>
          <TextBlock Text="{Binding Brain.LastOutputTickLabel, StringFormat='Last tick: {0}'}" Classes="muted" />
          <ScrollViewer MaxHeight="260" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Brain.VectorEvents}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" Margin="0,4">
                    <TextBlock Text="{Binding TimeLabel}" Classes="muted" />
                    <TextBlock Grid.Column="1" Text="{Binding ValuesPreview}" Classes="row-title" />
                    <TextBlock Grid.Column="2" Text="{Binding TickId}" Classes="muted" />
                  </Grid>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </StackPanel>
      </Border>
    </StackPanel>
  </ScrollViewer>
</UserControl>
