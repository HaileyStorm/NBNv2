<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Nbn.Tools.Workbench.ViewModels"
             x:Class="Nbn.Tools.Workbench.Views.Panels.DesignerPanel"
             x:DataType="vm:DesignerPanelViewModel">
  <Border Classes="card">
    <StackPanel Spacing="10">
      <TextBlock Text="Designer" Classes="card-title" />
      <TextBlock Text="Draft new brain definitions, import/export .nbn, and validate constraints." Classes="card-subtitle" />
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button Content="New Brain" />
        <Button Content="Import .nbn" />
        <Button Content="Export .nbn" />
        <Button Content="Validate" />
      </StackPanel>
      <TextBlock Text="{Binding Status}" Classes="muted" />
    </StackPanel>
  </Border>
</UserControl>
